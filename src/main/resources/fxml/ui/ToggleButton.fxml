<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXToggleButton?>
<?import com.jfoenix.controls.JFXToggleNode?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="root" prefHeight="451.0" prefWidth="397.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">

    <VBox maxHeight="300" maxWidth="400" prefWidth="300" spacing="50">
        <Label styleClass="title-label">Toggle Buttons</Label>
        <FlowPane hgap="26" style="-fx-padding:0 0 0 50">
            <Label styleClass="toggle-label">Wifi (separate label)</Label>
            <JFXToggleButton styleClass="custom-jfx-toggle-button-red">
            </JFXToggleButton>
        </FlowPane>
        <FlowPane hgap="60" style="-fx-padding:0 0 0 50">
            <JFXToggleButton styleClass="custom-jfx-toggle-button" text="Bluetooth">
            </JFXToggleButton>

            <JFXToggleButton text="Wifi">
            </JFXToggleButton>

        </FlowPane>

        <Label styleClass="title-label">Toggle Icons</Label>

        <FlowPane hgap="60" style="-fx-padding:0 0 0 50">
            <JFXToggleNode pickOnBounds="false" styleClass="toggle-icon1">
                <FontAwesomeIconView glyphName="PHONE" size="2em" styleClass="icon" />
            </JFXToggleNode>
            <JFXToggleNode pickOnBounds="false" styleClass="toggle-icon2">
                <FontAwesomeIconView glyphName="HEART" size="2em" styleClass="icon" />
            </JFXToggleNode>
            <JFXToggleNode pickOnBounds="false" styleClass="toggle-icon3">
                <FontAwesomeIconView glyphName="KEY" size="2em" styleClass="icon" />
            </JFXToggleNode>

        </FlowPane>

    </VBox>

</StackPane>
